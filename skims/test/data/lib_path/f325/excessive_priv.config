<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <security>
            <authentication>
                <anonymousAuthentication enabled="true" userName="" />
                <basicAuthentication enabled="false" />
            </authentication>

            <authorization>
                <add accessType="Allow" users="*" />
                <add accessType="Deny" users="*" />
                <add accessType="Allow" users="admin" />
            </authorization>

        </security>
    </system.webServer>
</configuration>
