{
  "compilerOptions": {
    "allowJs": false,
    "useDefineForClassFields": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "CommonJS",
    "outDir": "out",
    "paths": {
      "@retrieves/*": ["./*"],
      "@webview/*": ["../webview-ui/src/*"],
    },
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
    "types": ["mocha"],

    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "vite.config.ts",
    "webview-ui",
  ]
}
